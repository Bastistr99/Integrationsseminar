{
    "$schema": "http://json-schema.org/draft-07/schema",
    "type": "object",
    "properties": {
        "id": {
            "type": "number",
            "description": "Jede Bewertung sollte eine eigene Unique ID bekommen = Primärschlüssel in der Datenbank"
        },
        "produkt": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string"
                },
                "preis": {
                    "type": "number"
                }, 
                "art": {
                    "type": "array",
                    "description": "Um welche Art von Produkt handelt es sich"
                }
            }
        },
        "personalbezogene_aspekte": {
            "type": "object",
            "properties": {
                "nutzer": {
                    "type": "object",
                    "properties": {
                        "autonomie": {
                            "type": "number",
                            "description": "Förderung der Autonomie (Technik hilft eigenständig zu bestimmen, ob oder wie etwas ausgeführt wird)"
                        },
                        "selbststaendigkeit": {
                            "type": "number",
                            "description": "Förderung der Selbständigkeit (Technik hilft bei der selbständigen Ausführung einer Handlung)"
                        },
                        "psychische_sicherheit": {
                            "type": "number",
                            "description": "Förderung der physischen Sicherheit (Schutz vor Gefahren z.B. Sturz, Feuer)"
                        },
                        "pyschische_entlastung": {
                            "type": "number",
                            "description": "Psychische Entlastung"
                        },
                        "gesellschaftlich": {
                            "type": "number",
                            "description": "Ermöglichung gesellschaftlicher Teilhabe (Vermeidung sozialer Isolation)"
                        },
                        "gefahr": {
                            "type": "number",
                            "description": "Geringe Gefahr der Stigmatisierung"
                        },
                        "medikamentenkonsum": {
                            "type": "number",
                            "description": "Positive Auswirkungen auf den Medikamentenkonsum"
                        },
                        "zumutbarkeit": {
                            "type": "number",
                            "description": "Zumutbarkeit (tolerierbare Belastungen im Alltag. Ist der Nutzen insgesamt (auch für Beteiligte) größer als der Nachteil (für das Individuum))"
                        },
                        "akzeptanz": {
                            "type": "number",
                            "description": "Akzeptanz (wird das Hilfsmittel vom Nutzer akzeptiert?)"
                        },
                        "privatsphaere": {
                            "type": "number",
                            "description": "Geringer Eingriff in Privatsphäre (z.B. Bewegungsprofile, Wahlmöglichkeit zur Weitergabe von Informationen)"
                        },
                        "komfortabel": {
                            "type": "number",
                            "description": "Komfortable in der Anwendung/ Wohlbefinden "
                        }
                    },
                    "description": "Fragen für den Nutzer"
                },
                "angehoerige": {
                    "type": "object",
                    "properties": {
                        "entlastung_angehoerige": {
                            "type": "number",
                            "description": "Entlastung von Angehörigen (psychisch, körperlich, zeitlich und/oder finanziell)"
                        },
                        "ermoeglichung_fuehrsorge": {
                            "type": "number",
                            "description": "Ermöglichung von Fürsorge (Übernahme von Sorge, Entscheidungen und Verantwortung in dem Maße, in dem der Bedürftige dazu selbst nicht mehr in der Lage ist)"
                        }
                    },
                    "description": "Fragen für die Angehörigen"
                },
                "pflegepersonal": {
                    "type": "object",
                    "properties": {
                        "entlastung": {
                            "type": "number",
                            "description": "Entlastung für Pflegepersonal (psychisch, körperlich, zeitlich)"
                        },
                        "akzeptanz": {
                            "type": "number",
                            "description": "Entlastung für Pflegepersonal (psychisch, körperlich, zeitlich)"
                        }
                    },
                    "description": "Fragen an Pfelgepersonal und andere"
                    
                }
            }
        },
        "technologische_aspekte": {
            "type": "object",
            "description": "Technologische Aspekte",
            "properties": {
                "schnelle_verfuegbarkeit": {
                    "type": "number",
                    "description": "Schnelle Verfügbarkeit (Lieferkapazität, Wartezeiten)"
                },
                "robustheit": {
                    "type": "number",
                    "description": "Robustheit (Stabilität, Zuverlässigkeit, Langlebigkeit"
                },
                "wohnraum":{
                    "type": "number",
                    "description": "Kompatibilität mit bestehendem Wohnraum (keine bauliche Anpassung erforderlich z.B. zusätzliche Steckdose)"
                },
                "infrastruktur":{
                    "type": "number",
                    "description": "Keine zusätzliche IT-Infrastruktur notwendig (Wlan)"
                },
                "hardware_software":{
                    "type": "number",
                    "description": "Kompatibilität Hard- und Software (Insbesondere ist dies zu beachten, wenn Standard- oder Fremdsoftware auf den Geräten zum Einsatz kommen (Produktzyklen,Versionswechsel, Softwareanpassungen))"
                },
                "service":{
                    "type": "number",
                    "description": "Ausreichender Service und Support (insbesondere kombinierte Systeme, Verantwortlichkeit) Leistungsumfang (24/7 oder 8-17h) Online support möglich?"
                },
                "ausfall":{
                    "type": "number",
                    "description": "Geringe Gefahr für den Nutzer bei Ausfall der Technologie"
                },
                "einrichtung":{
                    "type": "number",
                    "description": "Einfache Einrichtung der Technologie "
                },
                "bedienung": {
                    "type": "number",
                    "description": "Intuitive Bedienung, wenig Schulungsbedarf (geringer Aufwand, intern möglich  oder extern leicht zu organisieren)"
                },
                "bedienungsfreundlichkeit": {
                    "type": "number",
                    "description": "Bedienerfreundlichkeit im Verlauf/ in der Nutzung"
                },
                "beziehung": {
                    "type": "number",
                    "description": "Förderung der Arzt-Nutzer-Beziehung"
                },
                "datensicherheit": {
                    "type": "number",
                    "description": "Gewährleistung der Datensicherheit, (werden Daten gespeichert? Wie? Wo?)"
                },
                "datentransparenz": {
                    "type": "number",
                    "description": "Gewährleistung der Datentransparenz (bekannt welche Daten wo gespeichert werden, von wem einsehbar? was wird gespeichert? Wie lange? Von wem einsehbar?)"
                },
                "leistungsfaehigkeit": {
                    "type": "number",
                    "description": "Gute Leistungsfähigkeit (Effektivität in Bezug auf Hauptfunktion)"
                },
                "design": {
                    "type": "number",
                    "description": "Ästhetik (Design)"
                }
            }
        },
        "ökonomische_aspekte": {
            "type": "object",
            "description": "Ökonomische Fragen",
            "properties": {
                "anschaffungskosten": {
                    "type": "number",
                    "description": "akzeptable Anschaffungskosten für Nutzer"
                },
                "service": {
                    "type": "number",
                    "description": "günstiger Service und support"
                },
                "kostenuebernahme": {
                    "type": "number",
                    "description": "Möglichkeit der Kostenübernahme seitens der Kassen"
                },
                "laufende_kosten": {
                    "type": "number",
                    "description": "überschaubare laufenden Kosten (Verbrauchsmaterial)"
                },
                "betriebskosten": {
                    "type": "number",
                    "description": "überschaubare Betriebskosten, keine versteckten Kosten (z.B. In-App-Käufe)"
                },
                "betreuungsaufwand": {
                    "type": "number",
                    "description": "geringer Betreuungsaufwand (z.B. Aufladezeit, Updates)"
                },
                "wartungsaufwand": {
                    "type": "number",
                    "description": "geringer Wartungsaufwand (Geräte, „Hardware“)"
                }
            }
        }
    }
}